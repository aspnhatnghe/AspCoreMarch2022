<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/MyStyleSheet.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container">
        <header id="myheader">#MY HEADER</header>
        <div class="row m-0">
            <aside class="col-3">
                @await Html.PartialAsync("DanhSach")

                @{
                    var danhSach = new string[]
                    {
                        "Bia", "Nước ngọt", "Cafe"
                    };
                }
                @await Html.PartialAsync("Category", danhSach)

                @await Component.InvokeAsync("CategoryMenu")

            </aside>
            <div class="col-9 mycontent">
                @RenderBody()
            </div>
        </div>        
        <footer class="text-center p-2 text-danger">
            Bản quyền thuộc về XYZ
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
