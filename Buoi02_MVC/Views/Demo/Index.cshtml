<h1>Index - Demo</h1>
<h2>Ôn tập C#</h2>
<hr />
<img src="~/images/iphone-13-128gb-chinh-hang.jpg" />
@{
    const int SO_LUONG = 6;

    var mangSo = new int[SO_LUONG];

    var vietlotte = new List<int>();

    var random = new Random();
    for (int i = 0; vietlotte.Count < SO_LUONG; i++)
    {
        //sinh phần tử mới
        var tmp = random.Next(1, 56);
        //if(vietlotte.Contains(tmp) == false)
        if (!vietlotte.Contains(tmp))
        {
            vietlotte.Add(tmp);
        }
    }
    vietlotte.Sort();
}
<h3>Kết quả xổ số</h3>
@foreach (int item in vietlotte)
{
    <div>@item</div>
}

